@model NS.FAM.Data.CustomEntities.CategoryViewModel
@{
    Layout="_Layout";
}
<h2 class="text-center">Add new Category</h2>
@using (Html.BeginForm("AddCategory1", "Product", FormMethod.Post, new {id="formRegistration",enctype="multipart/form-data"}))
{
<div class="form-group">
   <label for="Category Name" class="col-md-3 control-label">Category</label>
    <div class="col-md-9">
      @Html.HiddenFor(x=>x.Id)
      @Html.TextBoxFor(x =>x.Name, "", new {@class="form-select form-select-lg mb-3" , placeholder = "Enter the category name" })
      @Html.ValidationMessageFor(x => x.Name,"",new{@class="text-danger"})
   </div>
</div>
<br/>


<div class="col-md-offset-3 col-md-9">
   <button id="btn-signup" type="submit" class="btn btn-dark"><i class="icon-hand-right"></i>Submit</button>
   <span style="margin-left:8px;"></span>
</div>
}